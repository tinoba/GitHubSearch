<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:id="@+id/imgSlika"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imgSlika"
        android:layout_alignBottom="@+id/imgSlika"
        android:id="@+id/rltvPodaci">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ime autora:"
            android:id="@+id/textView"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ime repozitorija:"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Medium Text"
            android:id="@+id/txtImeRepozitorija"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView2"
            android:textSize="10dp"
            android:layout_above="@+id/txtImeAutora"
            android:layout_alignParentTop="true"
            android:textAlignment="gravity"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Medium Text"
            android:id="@+id/txtImeAutora"
            android:layout_below="@+id/textView2"
            android:layout_alignEnd="@+id/txtImeRepozitorija"
            android:layout_toEndOf="@+id/textView"
            android:textSize="10dp"
            android:layout_above="@+id/textView5"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Broj pratitelja:"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/txtBrojPratitelja"
            android:layout_below="@+id/textView"
            android:textSize="10dp"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toEndOf="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Broj fork-ova:"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_toStartOf="@+id/txtBrojPratitelja" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/txtBrojForkova"
            android:textSize="10dp"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:layout_alignTop="@+id/textView7"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/textView7"
            android:layout_toEndOf="@+id/textView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Broj issue-a:"
            android:id="@+id/textView9"
            android:layout_below="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_toStartOf="@+id/txtBrojForkova" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/txtBrojIssuea"
            android:layout_below="@+id/textView7"
            android:textSize="10dp"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:layout_alignBottom="@+id/textView9"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView9" />
    </RelativeLayout>

</RelativeLayout>
